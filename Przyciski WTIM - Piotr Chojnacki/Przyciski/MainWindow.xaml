        <TextBlock HorizontalAlignment="Left" Height="36.8" Margin="76.2,135.2,0,0" TextWrapping="Wrap" Text="PIOTR" VerticalAlignment="Top" Width="120.8" FontSize="20" FontWeight="Bold" Foreground="#FF9A0000"/>
