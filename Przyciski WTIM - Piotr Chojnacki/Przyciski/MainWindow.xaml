                <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="-12.8"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.9" Value="-28.267"/>
                <EasingDoubleKeyFrame KeyTime="0:0:1.4" Value="-43.067"/>
