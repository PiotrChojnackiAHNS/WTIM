                <EasingDoubleKeyFrame KeyTime="0:0:3.9" Value="0.534"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>
    <Window.Triggers>
        <EventTrigger RoutedEvent="UIElement.MouseEnter" SourceName="rectangle1">
            <BeginStoryboard Storyboard="{StaticResource P1}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="UIElement.MouseEnter" SourceName="rectangle3">
            <BeginStoryboard Storyboard="{StaticResource P2}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="UIElement.MouseLeftButtonDown" SourceName="rectangle5">
            <BeginStoryboard Storyboard="{StaticResource P3}"/>
        </EventTrigger>
    </Window.Triggers>
    <Grid>
