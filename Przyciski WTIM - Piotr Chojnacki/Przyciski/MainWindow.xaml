        <TextBlock HorizontalAlignment="Left" Height="36.8" Margin="245.192,135.2,0,0" TextWrapping="Wrap" Text="CHOJNACKI" VerticalAlignment="Top" Width="120.8" FontSize="20" FontWeight="Bold" Foreground="#FFE5E5E5"/>
        <Rectangle x:Name="rectangle2" HorizontalAlignment="Left" Height="15.941" Margin="221.497,161.736,0,0" VerticalAlignment="Top" Width="155.695" RadiusY="8.236" RadiusX="8.236" Fill="#FFD71616" Visibility="Hidden" RenderTransformOrigin="0.5,0.5">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
